    <SkipValidationAfterInit>True</SkipValidationAfterInit>

    <Iau>1</Iau>

    <Electric>
      <Simvar name="CIRCUIT ON:41" unit="Boolean"/>
    </Electric>

    <Plugin>
      coui://SimObjects/Airplanes/Asobo_Longitude/panel/Instruments/G3000/Plugins/LongitudeMfdPlugins.js
    </Plugin>
    
    <Plugin>
      coui://html_ui/ChecklistPlugins/LongitudeChecklistMfdPlugins.js
    </Plugin>
  </Instrument>

  <Instrument>
    <!-- Pilot PFD GTC -->
    <Name>WTG3000_GTC_1</Name>

    <GtcConfig orientation="vertical" control-setup="pfd" pfd-control-index="1" />

    <Iau>1</Iau>

