<PlaneHTMLConfig>
  <SoundSourceNode>AS1000_MFD</SoundSourceNode>

  <AvionicsType>G5000</AvionicsType>

  <AuralAlerts voice='both' />

  <Fms>
    <FlightPath max-bank="30" low-bank="15" />
    <Approach rnp-ar="true">
      <Visual final-dist="2" strght-dist="4" />
    </Approach>
  </Fms>

  <VNAV advanced="true">
    <FmsSpeeds>
      <GeneralLimits>
        <Ias>
          <Minimum>100</Minimum>
          <Maximum>324</Maximum>
        </Ias>
        <Mach>
          <Minimum>0.2</Minimum>
          <Maximum>0.84</Maximum>
        </Mach>
      </GeneralLimits>

      <AirframeLimits>
        <Ias>
          <LookupTable dimensions="1">[[290, 0], [325, 8000]]</LookupTable>
        </Ias>
        <Mach>0.84</Mach>
      </AirframeLimits>

      <ConfigurationSpeeds>
        <Flaps name='Flaps 1' extension='6' min='140' max='230' default='200' />
        <Gear name='Gear' extension='10' min='140' max='230' default='200' />
        <Flaps name='Flaps 2' extension='14' min='125' max='180' default='160' />
        <Flaps name='Flaps Full' extension='34' min='120' max='180' default='140' />
      </ConfigurationSpeeds>

      <Schedules>
        <ClimbSchedule name="Maximum Rate Climb" default="true">
          <Ias>270</Ias>
          <Mach>0.76</Mach>
        </ClimbSchedule>
        <ClimbSchedule name="Cruise Climb">
          <Ias>270</Ias>
          <Mach>0.80</Mach>
        </ClimbSchedule>
        <ClimbSchedule name="High Speed Climb">
          <Ias>300</Ias>
          <Mach>0.80</Mach>
        </ClimbSchedule>

        <CruiseSchedule name="" default="true">
          <Ias>320</Ias>
          <Mach>0.84</Mach>
        </CruiseSchedule>

        <DescentSchedule name="" default="true">
          <Ias>300</Ias>
          <Mach>0.8</Mach>
          <Fpa>-3</Fpa>
        </DescentSchedule>
      </Schedules>
    </FmsSpeeds>
  </VNAV>

  <Autothrottle>True</Autothrottle>

  <Sensors adc-count="2" ahrs-count="2">
    <Adc index="1" airspeed-indicator="1">
      <Electric>
        <Simvar name="CIRCUIT ON:58" unit="Boolean"/>
      </Electric>
    </Adc>
    <Adc index="2" airspeed-indicator="1">
      <Electric>
        <Simvar name="CIRCUIT ON:59" unit="Boolean"/>
      </Electric>
    </Adc>

    <Ahrs index="1" attitude-indicator="1" direction-indicator="1">
      <Electric>
        <Simvar name="CIRCUIT ON:60" unit="Boolean"/>
      </Electric>
    </Ahrs>
    <Ahrs index="2" attitude-indicator="1" direction-indicator="1">
      <Electric>
        <Simvar name="CIRCUIT ON:61" unit="Boolean"/>
      </Electric>
    </Ahrs>

    <MarkerBeacon>
      <Electric>
        <Simvar name="CIRCUIT ON:26" unit="Boolean"/>
      </Electric>
    </MarkerBeacon>

    <RadarAltimeter>
      <Electric>
        <Simvar name="CIRCUIT ON:33" unit="Boolean"/>
      </Electric>
    </RadarAltimeter>

    <WeatherRadar horiz-scan-width="120" colors="extended" min-gain="-28" >
      <Electric>
        <Simvar name="CIRCUIT ON:66" unit="Boolean"/>
      </Electric>
      <ScanActiveCircuit circuit="71" procedure="2" />
    </WeatherRadar>
  </Sensors>

  <IauDefs count="2">
    <Iau index="1" default-adc="1" default-ahrs="1" altimeter-source="1" baro-preselect="true">
      <Gps>
        <Electric>
          <Simvar name="CIRCUIT ON:27" unit="Boolean"/>
        </Electric>
      </Gps>

      <FmsPosition>
        <Electric>
          <Simvar name="CIRCUIT ON:27" unit="Boolean"/>
        </Electric>
      </FmsPosition>
    </Iau>

    <Iau index="2" default-adc="2" default-ahrs="2" altimeter-source="2" baro-preselect="true">
      <Gps>
        <Electric>
          <Simvar name="CIRCUIT ON:29" unit="Boolean"/>
        </Electric>
      </Gps>

      <FmsPosition>
        <Electric>
          <Simvar name="CIRCUIT ON:29" unit="Boolean"/>
        </Electric>
      </FmsPosition>
    </Iau>
  </IauDefs>

  <Radios dme-count="2" adf-count="2" />

  <Autopilot hdg-sync-mode="true">
    <ROL min-bank="6" max-bank="27" />
    <HDG max-bank="27" />
    <VOR max-bank="27" />
    <LOC max-bank="27" />
    <FMS max-bank="30" />
    <LowBank max-bank="17" />
  </Autopilot>

  <VSpeeds>
    <Group type="Takeoff" max-ias="230">
      <VSpeed name="1">128</VSpeed>
      <VSpeed name="r">130</VSpeed>
      <VSpeed name="2">142</VSpeed>
      <VSpeed name="fto">185</VSpeed>
    </Group>
    <Group type="Landing">
      <VSpeed name="app">137</VSpeed>
      <VSpeed name="ref">125</VSpeed>
    </Group>
    <Group type="Configuration" max-altitude="18000">
      <VSpeed name="f1">250</VSpeed>
      <VSpeed name="gr">230</VSpeed>
      <VSpeed name="f2">230</VSpeed>
      <VSpeed name="ff">180</VSpeed>
    </Group>
  </VSpeeds>

  <Performance>
    <Weights>
      <BasicEmpty unit='pounds'>23389</BasicEmpty>
      <MaxRamp unit='pounds'>39700</MaxRamp>
      <MaxTakeoff unit='pounds'>39500</MaxTakeoff>
      <MaxLanding unit='pounds'>33500</MaxLanding>
      <MaxZeroFuel unit='pounds'>26800</MaxZeroFuel>
      <MaxPax>8</MaxPax>
    </Weights>

    <Airframe>Cessna Model 700</Airframe>

    <TOLD>
      <Takeoff>
        <Flaps default="1">
          <Option extension="7">1</Option>
          <Option extension="15">2</Option>
        </Flaps>
        <AntiIce max-temp="10" />
        <ThrustReverser>
          <Condition surface="dry" flaps="1">False</Condition>
          <Condition surface="wet" flaps="1">True</Condition>
        </ThrustReverser>
        <Rolling default="false" />
      </Takeoff>
      <Landing>
        <Flaps default="Full">
          <Option extension="35">Full</Option>
        </Flaps>
        <AntiIce max-temp="10" />
        <ThrustReverser>
          <Condition surface="dry">False</Condition>
          <Condition surface="wet">False</Condition>
        </ThrustReverser>
        <Autothrottle />
      </Landing>
    </TOLD>
  </Performance>

  <Traffic type="TCAS-II" ads-b="true">
    <Electric>
      <Simvar name="CIRCUIT ON:31" unit="Boolean"/>
    </Electric>
  </Traffic>

  <Terrain type="taws-a">
    <Modules>
      <Ecr flaps-landing-min="34" />
      <TouchdownCallouts inhibit-500-gs-gp="true">
        <Callout>500</Callout>
        <Callout configurable="true" enabled="false">450</Callout>
        <Callout configurable="true" enabled="false">400</Callout>
        <Callout configurable="true" enabled="false">350</Callout>
        <Callout configurable="true" enabled="false">300</Callout>
        <Callout configurable="true" enabled="false">250</Callout>
        <Callout configurable="true">200</Callout>
        <Callout configurable="true" enabled="false">150</Callout>
        <Callout configurable="true">100</Callout>
        <Callout configurable="true">50</Callout>
        <Callout configurable="true">40</Callout>
        <Callout configurable="true">30</Callout>
        <Callout configurable="true">20</Callout>
        <Callout configurable="true">10</Callout>
      </TouchdownCallouts>
    </Modules>
  </Terrain>

  <Map airplane-icon-src="coui://SimObjects/Airplanes/Asobo_Longitude/panel/Instruments/G3000/Plugins/Assets/Images/Map/airplane_longitude.svg" traffic-range-label-radial="225" traffic-range-inner-ring-show="false" />

  <Horizon director-cue="both" symbol-color="white" roll-arc="false" roll-pointer="sky" advanced-svt="true" />

  <AirspeedIndicator>
    <Scale min="40" max="999" window="80" major-tick-interval="10" minor-tick-factor="1" />
    <ColorRanges>
      <ColorRange width="Full" color="Yellow">
        <Minimum>
          <Speed type="Aoa">0.9</Speed>
        </Minimum>
        <Maximum>
          <Speed type="Aoa">0.7</Speed>
        </Maximum>
      </ColorRange>
      <ColorRange width="Full" color="Red">
        <Minimum>
          <Speed type="Ias">40</Speed>
        </Minimum>
        <Maximum>
          <Speed type="Aoa">0.9</Speed>
        </Maximum>
      </ColorRange>
      <ColorRange width="Full" color="BarberPole">
        <Minimum>
          <Min>
            <Speed type="Ias">
              <LookupTable dimensions="1">[[290, 0], [325, 8000]]</LookupTable>
            </Speed>
            <Speed type="Mach">0.84</Speed>
          </Min>
        </Minimum>
        <Maximum>
          <Speed type="Ias">999</Speed>
        </Maximum>
      </ColorRange>
    </ColorRanges>
    <BottomDisplay mode="Mach" mach-threshold="0.4" />
    <VSpeedBugs>
      <Bug name="gr" label="     GR" />
      <Bug name="f1" label="F1" />
      <Bug name="f2" label="F2" />
      <Bug name="ff" label="FF" />
      <Bug name="2" label="      2" />
      <Bug name="r" label="   R" />
      <Bug name="1" label="1" />
      <Bug name="fto" label="FTO" />
      <Bug name="app" label="AP" />
      <Bug name="ref" label="RF" />
    </VSpeedBugs>
    <TrendVector lookahead="10" />
    <SpeedAlerts>
      <Overspeed>
        <Min>
          <Speed type="Ias">
            <LookupTable dimensions="1">[[290, 0], [325, 8000]]</LookupTable>
          </Speed>
          <Speed type="Mach">0.84</Speed>
        </Min>
      </Overspeed>
      <Underspeed>
        <Speed type="Aoa">0.9</Speed>
      </Underspeed>
    </SpeedAlerts>
  </AirspeedIndicator>

  <Altimeter>
    <Scale min="-9999" max="99999" window="1000" major-tick-interval="500" minor-tick-factor="5" />
    <TrendVector lookahead="6" />
  </Altimeter>

  <Vsi>
    <Scale max="6000" major-tick-interval="2000" minor-tick-factor="2" />
  </Vsi>

  <AoaIndicator advanced="true" />

  <NavStatusBox field-1="DIS" field-2="ETE" />
  <CAS full-screen-alert-count="12"/>

  <Instrument>
    <Name>AS1000_AttitudeSpeedBackup</Name>
    <Electric>
      <Simvar name="CIRCUIT ON:52" unit="Boolean"/>
    </Electric>
    <AltimeterIndex>2</AltimeterIndex>
  </Instrument>

  <Instrument>
    <Name>HourMeter</Name>
    <Electric>
      <Simvar name="CIRCUIT ON:54" unit="Boolean"/>
    </Electric>
  </Instrument>

  <Instrument>
    <Name>WTG3000_PFD_1</Name>

    <PfdLayout use-banners="false" softkeys="false" />

    <Iau>1</Iau>

    <Electric>
      <Simvar name="CIRCUIT ON:39" unit="Boolean"/>
